{{#if messageSended}}
<p class="modal message-sended">Votre message s'est bien envoy√© !</p>
{{/if}}

<div class="introduction">
  <div class="introduction__container">
    <div class="introduction__image">
      <img src="img/hippolyte-soulier.jpg" alt="Hippolyte Soulier">
      <div class="introduction__bonjour">Bonjour !</div>
    </div>
    <div class="introduction__description">
      <h1>Hippolyte Soulier</h1>
      <h2>{{sections.hero.job}}</h2>
      <p>
        {{sections.hero.introduction}}
      </p>
      <div class="introduction__cta">
        <a href="/projets" class="btn">Voir les projets</a>
      </div>
    </div>
  </div>
</div>
<div class="contact" id="contact-section">
  <h2>Un petit message ?</h2>
  <div class="contact__container">
    <form action="/contact" method="post" class="contact__form">
      <div class="form-row">
        <div class="form-field">
          <label for="name">Nom</label>
          <input type="text" id="name" name="name" placeholder="Entrez votre nom" required>
        </div>
        <div class="form-field">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Entrez votre email" required>
        </div>
      </div>
      <div class="form-row-wide">
        <label for="message">Message</label>
        <textarea name="message" id="message" placeholder="Entrez votre message"></textarea>
      </div>
      <button type="submit" class="btn">Envoyer mon message</button>
    </form>
    <img src="/img/thumb-up.png" class="contact__thumb" alt="Pouce en l'air">
  </div>
</div>