<div class="main-content flex-1 bg-gray-100 mt-12 md:mt-2 pb-24 md:pb-5">
  <div id="project">
    <div class="bg-gray-800 pt-3">
      <div class="rounded-tl-3xl p-4 text-2xl text-white">
        <h3 class="font-bold pl-2">Projets</h3>
      </div>
    </div>
    <div class="flex flex-wrap">
      {{#each projects as |project|}}
        <div class="w-full md:w-1/2 xl:w-1/3 p-6">
          <div class="bg-gray-100 rounded-lg shadow-xl p-5">
            <div class="flex flex-row items-center">
              <div class="flex-shrink pr-4">
                <div class="rounded-full w-40 h-40 overflow-hidden"><img src="/img/project/{{project.image}}"
                    alt="Image du projet" class="object-cover h-full w-full"></div>
              </div>
              <div class="flex-1">
                <h5 class="font-bold text-2xl uppercase text-gray-600">{{project.title}}</h5>
                <p class="text-base text-left">{{project.description}} <br><a class="text-green-500"
                    href="{{project.link}}">Site</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="flex flex-row flex-wrap flex-grow mt-2">
      <div class=" w-full bg-gray-800 pt-3">
        <div class="rounded-tl-3xl p-4 text-2xl text-white">
          <h3 class="font-bold pl-2">Ajouter un Projet</h3>
        </div>
      </div>
      <form method="POST" action="/admin/project/new" class="w-full p-6" enctype="multipart/form-data">
        <div class="bg-gray-100 rounded-lg shadow-xl p-5">
          <div class="flex flex-row items-center">
            <div class="flex-shrink pr-4">
              <div><input class="rounded-none p-0 border-none" type="file" name="image"></div>
            </div>
            <div class="flex-1">
              <input class="py-1 px-2 rounded-none" type="text" name="title" class="py-1 px-2 rounded-none" placeholder="Titre du projet"/>
              <p class="text-base text-left"><textarea class="py-1 px-2 rounded-none" name="description">Description projet</textarea>
              <br>
              <input class="py-1 px-2 rounded-none" type="text" name="subtitle" placeholder="Mon travail sur le projet">
              <input class="py-1 px-2 rounded-none" type="text" name="stack" placeholder="Liste de la stack">
              <input class="text-green-500 py-1 px-2 rounded-none" type="text" name="link" placeholder="URL projet">
              </p>
              <button class="bg-gray-800 text-white p-4 rounded-lg mt-4" type="submit">Ajouter</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>